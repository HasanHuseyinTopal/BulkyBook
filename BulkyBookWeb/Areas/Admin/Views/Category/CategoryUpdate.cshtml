@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "CategoryUpdate";
}


<form asp-controller="Category" asp-action="CategoryUpdate" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update Category</h2>
                    <hr />
        </div>
        <div class=" mb-3">
            <input asp-for="CategoryID" type="hidden" class="form-control" />
            <label asp-for="CategoryName">Category Name</label>
            <input asp-for="CategoryName" class="form-control" placeholder="Name" autocomplete="off" />
            <span asp-validation-for="CategoryName"></span>
        </div>
        <div class=" mb-3">
            <label asp-for="CategoryDisplayOrder">Display Order</label>
            <input asp-for="CategoryDisplayOrder" class="form-control" placeholder="Name" autocomplete="off" />
            <span asp-validation-for="CategoryDisplayOrder"></span>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
        <a class="btn btn-secondary" href="/Category/GetAllCategories">Back To List</a>
    </div>
</form>

@section scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}