@{
    ViewData["Title"] = "GetAllCategories";
}

<div class="container p-3">
    <div class="row p-3">
        <div style="display:flex; justify-content:center;" class="col-6">
            <h2 style="align-self:center" class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a style="border-radius:25px" class="btn btn-primary btn-lg" asp-action="ProductUpSert" asp-controller="Product"><i class="bi bi-plus-circle"> &nbsp Create New Product</i></a>
        </div>
    </div>
    <br />
    <table id="productTable" class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>ISBN</th>
                <th>Author</th>
                <th>Price</th>
                <th>Category</th>
                <th>Cover Type</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
    </table>
</div>


@section scripts{
<script src="~/js/products.js"></script>
}

