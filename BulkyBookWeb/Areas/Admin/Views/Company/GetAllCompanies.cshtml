@{
    ViewData["Title"] = "GetAllCompanies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container p-3">
    <div class="row p-3">
        <div style="display:flex; justify-content:center;" class="col-6">
            <h2 style="align-self:center" class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a style="border-radius:25px" class="btn btn-primary btn-lg" asp-action="CompanyUpSert" asp-controller="Company"><i class="bi bi-plus-circle"> &nbsp Create New Company</i></a>
        </div>
    </div>
    <br />
    <table id="companyTable" class="table table-bordered">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>Street Adress</th>
                <th>City</th>
                <th>State</th>
                <th>Postal Code</th>
                <th>Phone Number</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
    </table>
</div>

@section scripts{
<script src="~/js/company.js"></script>
}
